{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "apps": {
    "ios.debug": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/detoxexpo.app",
      "build": "xcodebuild -workspace ios/detoxexpo.xcworkspace/ -scheme detoxexpo -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
    },
    "ios.release": {
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/detoxexpo.app",
      "build": "xcodebuild -workspace ios/detoxexpo.xcworkspace -scheme detoxexpo -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
      "type": "ios.app"
    },
    "android.release": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=debug && cd .."
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 11"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_API_29_AOSP"
      }
    }
  },
  "configurations": {
    "ios.sim.debug": {
      "device": "simulator",
      "app": "ios.debug"
    },
    "ios.sim.release": {
      "device": "simulator",
      "app": "ios.release"
    },
    "android.emu.release": {
      "device": "emulator",
      "app": "android.release"
    }
  }
}